<?xml version="1.0" encoding="UTF-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/orange_background" android:endColor="@color/orange_background" android:angle="270" />
            <corners android:radius="15dp" />
                       
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="@color/orange_background"  android:endColor="@color/orange_background"  android:angle="270" />
            <corners android:radius="15dp" />
                       
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <gradient android:startColor="@color/orange_background"  android:endColor="@color/orange_background"  android:angle="270" />
            <corners android:radius="15dp" />
                      
        </shape>
    </item>
     <item>
        <shape>
            <gradient android:startColor="@color/main_menu_bg"  android:endColor="@color/main_menu_bg"  android:angle="270" />
            <corners android:radius="15dp" />        
        </shape>
    </item>
</selector>