<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_white"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="102dp"
                    android:layout_gravity="center_horizontal" >

                    <RelativeLayout
                        android:id="@+id/imageButtonFood"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" 
                        android:background="@drawable/food"
                        >

                        <ImageButton
       						android:id="@+id/imageButtonFood_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/imagebtn_food" />

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageButtonFood_x"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="美食"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/imageButtonMovie"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" 
                        android:background="@drawable/movie">

                        <TextView
                            android:id="@+id/mapTextContect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageButtonMovie_x"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="旅游"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <ImageButton
                            android:id="@+id/imageButtonMovie_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/imagebtn_movie" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/imageButtonHappy"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/happy"  >

                        <ImageButton
                            android:id="@+id/imageButtonHappy_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/imagebtn_happy" />

                        <TextView
                            android:id="@+id/mapTextContect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageButtonHappy_x"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="休闲娱乐"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/imageButtonHotel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/hotel" >

                        <ImageButton
                            android:id="@+id/imageButtonHotel_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/imagebtn_hotel" />

                        <TextView
                            android:id="@+id/mapTextContect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageButtonHotel_x"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="酒店"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="102dp"
                    android:layout_gravity="center_horizontal" >

                    <RelativeLayout
                        android:id="@+id/imageButtonNewInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" 
                         android:background="@drawable/newinfo" >

                        <ImageButton
                            android:id="@+id/imageButtonNewInfo_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/imagebtn_newinfo" />

                        <TextView
                            android:id="@+id/mapTextContect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageButtonNewInfo_x"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="生活服务"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/imageButtonCash"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/cash" >

                        <ImageButton
                            android:id="@+id/imageButtonCash_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/imagebtn_cash" />

                        <TextView
                            android:id="@+id/mapTextContect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageButtonCash_x"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="运动健身"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/imageButtonPeople"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/people" >

                        <ImageButton
                            android:id="@+id/imageButtonPeople_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/imagebtn_people" />

                        <TextView
                            android:id="@+id/mapTextContect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageButtonPeople_x"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="丽人"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/imageButtonAll"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" 
                        android:background="@drawable/all" >

                        <ImageButton
                            android:id="@+id/imageButtonAll_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/imagebtn_all" />

                        <TextView
                            android:id="@+id/mapTextContect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageButtonAll_x"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="全部分类"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <!--
                 <ScrollView
                android:id="@+id/scrollViewAllXX"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="vertical"
                android:scrollbars="vertical" >
            -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FCFCFC"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/orange" />

                    <TextView
                        android:id="@+id/textViewhotbusiness"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#EEEEEE"
                        android:gravity="center_vertical"
                        android:paddingTop="1dp"
                        android:text="  热门商家"
                        android:textColor="@color/textview_color"
                        android:textColorHint="@color/black"
                        android:textSize="24dp" />

                    <ListView
                        android:id="@+id/mListViewB"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:divider="@drawable/list_divider"
                        android:dividerHeight="1dip"
                        android:fastScrollEnabled="true" >
                    </ListView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/orange" />

                    <TextView
                        android:id="@+id/textViewhotperson"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#EEEEEE"
                        android:gravity="center_vertical"
                        android:text="  热门关注"
                        android:textColor="@color/textview_color"
                        android:textSize="24dp" />

                    <ListView
                        android:id="@+id/mListViewP"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="#00000000"
                        android:divider="@drawable/list_divider"
                        android:dividerHeight="1dip"
                        android:fastScrollEnabled="true" >
                    </ListView>
                </LinearLayout>
            </LinearLayout>
            <!-- </ScrollView> -->
        </LinearLayout>
    </ScrollView>

</LinearLayout>