<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_white" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/RelativeLayoutLogin"
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:background="@drawable/user_menu_header" >

            <ImageView
                android:id="@+id/imageHead"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_above="@+id/buttonlogin"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:src="@drawable/btn_person_normal" />

            <Button
                android:id="@+id/buttonlogin"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#EE7621"
                android:text="登    录" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dip"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:padding="5dp" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_margin="5dip"
                android:background="@drawable/border_bottom"
                android:gravity="center_vertical" >

                <Button
                    android:id="@+id/tvVersionCode"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/button_selector_user"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="版本更新  1.0"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="10dp"
                    android:src="@drawable/index_fh" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layoutChangeUserInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/layoutChangePwd"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dip"
                    android:background="@drawable/border_bottom"
                    android:gravity="center_vertical" >

                    <Button
                        android:id="@+id/changePwd"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/button_selector_user"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="修改密码"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="10dp"
                        android:src="@drawable/index_fh" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutMyFellow"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dip"
                    android:background="@drawable/border_bottom"
                    android:gravity="center_vertical" >

                    <Button
                        android:id="@+id/myFellow"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/button_selector_user"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="我的关注"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="10dp"
                        android:src="@drawable/index_fh" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutMyResource"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dip"
                    android:background="@drawable/border_bottom"
                    android:gravity="center_vertical" >

                    <Button
                        android:id="@+id/myResource"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/button_selector_user"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="我的资料"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="10dp"
                        android:src="@drawable/index_fh" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layoutLogout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dip"
                    android:layout_marginBottom="60dp" >

                    <Button
                        android:id="@+id/registerBtn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_selector_green"
                        android:text="退出"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>