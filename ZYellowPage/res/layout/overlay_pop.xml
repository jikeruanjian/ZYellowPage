<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:background="@drawable/pop_bg" 
android:layout_width="wrap_content" 
android:layout_height="wrap_content"
android:paddingLeft="5px"
android:paddingTop="5px"
android:paddingRight="5px"
android:paddingBottom="20px"    
   >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageViewPop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5px"
            android:paddingRight="5px"
            android:paddingTop="5px"
            android:src="@drawable/icon_120" />

        <TextView
            android:id="@+id/mapPopTextCotent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="详细信息"
            android:textColor="@color/yellow" />

    </LinearLayout>
    

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="31px"
            android:paddingLeft="5px"
	   		android:paddingTop="5px"
            android:text="  " 
            />

        <TextView
            android:id="@+id/textView2adr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
	   		android:paddingTop="5px"
            android:text="地址:" />

        <TextView
            android:id="@+id/textView3phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5px"
            android:textColor="#FFFFFF"
            android:text="电话:" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="5px" >
        
       <com.zdt.zyellowpage.util.ForcedTextView
           android:id="@+id/map_bubbleTitle"
           android:layout_width="150dp"
           android:layout_height="wrap_content"
           android:ellipsize="marquee"
           android:focusable="true"
           android:focusableInTouchMode="true"
           android:gravity="left"
           android:marqueeRepeatLimit="marquee_forever"
           android:paddingLeft="5px"
           android:paddingRight="5px"
           android:paddingTop="5px"
           android:singleLine="true"
           android:text=" "
           android:textColor="#FFFFFF"
           android:textSize="20dp" />

       <!--style="@style/map_BubblePrimary"  style可以没有,我这里第一个TextView表示标题,用的是大字体-->

 	<com.zdt.zyellowpage.util.ForcedTextView
 	    android:id="@+id/map_bubbleText"
 	    android:layout_width="150dp"
 	    android:layout_height="wrap_content"
 	    android:ellipsize="marquee"
 	    android:focusable="true"
 	    android:focusableInTouchMode="true"
 	    android:marqueeRepeatLimit="marquee_forever"
 	    android:padding="5dip"
 	    android:paddingLeft="5px"
 	    android:paddingRight="5px"
 	    android:singleLine="true"
 	    android:text=" "
 	    android:textColor="#FFFFFF" 
 	    android:visibility="gone"/>
    
    <TextView
        android:id="@+id/map_bubblePhone"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:padding="5dip"
        android:paddingLeft="5px"
        android:paddingRight="5px"
        android:singleLine="false"
        android:text=" "
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp" >

        <TextView
            android:id="@+id/mapPopTextWalk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="步行"
            
            android:textColor="@color/yellow" />
        
        <TextView
            android:id="@+id/mapPopTextBus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公交"
            android:layout_marginLeft="10dp"
            android:textColor="@color/yellow" />
        <TextView
            android:id="@+id/mapPopTextDrive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="驾车"
            android:layout_marginLeft="10dp"
            android:textColor="@color/yellow" />
        
        <TextView
            android:id="@+id/textViewClosePop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="关闭"
            android:textColor="@color/splash_bg" />

    </LinearLayout>
        
    </LinearLayout>

   
       <!--  style="@style/map_BubbleSecondary"  style可以没有,我这里第二个TextView表示描述信息,用的是大字体-->

    

</LinearLayout>