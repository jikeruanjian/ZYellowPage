<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_white" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dip"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:padding="5dp" >

                <RelativeLayout
                    android:id="@+id/layoutChangePwd"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dip"
                    android:background="@drawable/border_bottom"
                    android:gravity="center_vertical" >

                    <Button
                        android:id="@+id/tie"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/button_selector_user"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="喜庆专区"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="10dp"
                        android:src="@drawable/index_fh" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutMyFellow"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dip"
                    android:background="@drawable/border_bottom"
                    android:gravity="center_vertical" >

                    <Button
                        android:id="@+id/shao"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/button_selector_user"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="扫一扫"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="10dp"
                        android:src="@drawable/index_fh" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutMyResource"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dip"
                    android:background="@drawable/border_bottom"
                    android:gravity="center_vertical" >

                    <Button
                        android:id="@+id/clearCache"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/button_selector_user"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="清除缓存"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="10dp"
                        android:src="@drawable/index_fh" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dip"
                    android:background="@drawable/border_bottom"
                    android:gravity="center_vertical" >

                    <Button
                        android:id="@+id/checkUpdate"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/button_selector_user"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="版本更新  1.0"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="10dp"
                        android:src="@drawable/index_fh" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rllAboutUs"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dip"
                    android:background="@drawable/border_bottom"
                    android:gravity="center_vertical" >

                    <Button
                        android:id="@+id/aboutUs"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/button_selector_user"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="关于我们"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="10dp"
                        android:src="@drawable/index_fh" />
                </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>